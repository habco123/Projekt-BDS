<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10" fx:controller="org.but.feec.controllers.CreateInfoController">
    <Label text="Create User Info" style="-fx-font-size: 18px; -fx-font-weight: bold;" GridPane.columnSpan="2" >
        <font>
            <Font size="18.0"/>
        </font>
    </Label>

    <Label text="First Name:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="firstNameTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Last Name:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="lastNameTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Email:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="emailTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Telephone:" style="-fx-font-weight: bold;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="telephoneTextField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Street:" style="-fx-font-weight: bold;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="streetTextField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Street Num:" style="-fx-font-weight: bold;" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="streetNumTextField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="House Num:" style="-fx-font-weight: bold;" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="houseNumTextField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Postal Code:" style="-fx-font-weight: bold;" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <TextField fx:id="postalCodeTextField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
</GridPane>
