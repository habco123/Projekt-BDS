<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="625.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.but.feec.controllers.BookStoreController">
    <stylesheets>
        <URL value="@/org/but/feec/css/styles.css" />
    </stylesheets>
    <children>
        <Pane prefHeight="626.0" prefWidth="950.0">
            <children>
                <!-- Search Bar -->
                <HBox alignment="CENTER" layoutX="323.0" layoutY="70.0" spacing="10"> <!-- Set alignment to CENTER -->
                    <Label text="Search:" />
                    <TextField fx:id="searchField" prefHeight="0.0" prefWidth="149.0" promptText="Enter book name" />
                    <Button onAction="#searchBooks" prefHeight="56.0" prefWidth="97.0" text="Search" />
                </HBox>

                <!-- ScrollPane in the middle -->
                <ScrollPane layoutX="275.0" layoutY="166.0" prefHeight="400.0" prefWidth="400.0">
                    <content>
                        <VBox fx:id="bookListVBox" alignment="CENTER_LEFT" spacing="10">
                            <!-- Book entries will be dynamically added here -->
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Add more components or customize the layout as needed -->
            </children>
        </Pane>
    </children>
</VBox>
