<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.but.feec.controllers.BookDetailsController">
    <children>

        <Label fx:id="titleLabel" text="Book Details" />
        <Label fx:id="idLabel" />
        <Label fx:id="genreLabel" />
        <Label fx:id="publisherLabel" />
        <Label fx:id="introLabel" />
        <Label fx:id="authorLabel" />
        <Label fx:id="pagesLabel" />
        <Label fx:id="isbnLabel" />
        <Label fx:id="releaseYearLabel" />
        <Label fx:id="priceLabel" />

        <Button text="Buy" fx:id="buyButton" onAction="#buyBook"/>
    </children>
</VBox>
